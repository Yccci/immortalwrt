# Target
CONFIG_TARGET_mediatek=y
CONFIG_TARGET_mediatek_mt7981=y
CONFIG_TARGET_mediatek_mt7981_DEVICE_tr3000=y

# Kernel 6.6
CONFIG_KERNEL_PATCHVER="6.6"

# Luci 中文
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-i18n-zh-cn=y
CONFIG_PACKAGE_luci-ssl-openssl=y

# AdGuard Home
CONFIG_PACKAGE_adguardhome=y

# Turbo ACC / Flow Offload
CONFIG_PACKAGE_turboacc=y
CONFIG_PACKAGE_flowoffload=y
CONFIG_PACKAGE_kmod-ipt-offload=y

# MTK HNAT 与 USB PHY
CONFIG_PACKAGE_mtkhnat=y
CONFIG_PACKAGE_kmod-usb-phy=y

# USB 网络支持（RNDIS/ECM/NCM/QMI）
CONFIG_PACKAGE_kmod-usb-net-rndis=y
CONFIG_PACKAGE_kmod-usb-net-cdc-ether=y
CONFIG_PACKAGE_kmod-usb-net-qmi-wwan=y
CONFIG_PACKAGE_kmod-usb-net-ncm=y

# USB 存储
CONFIG_PACKAGE_kmod-fs-ext4=y
CONFIG_PACKAGE_kmod-fs-exfat=y
CONFIG_PACKAGE_kmod-fs-vfat=y
CONFIG_PACKAGE_block-mount=y
CONFIG_PACKAGE_automount=y

# NAND 文件系统与挂载支持
CONFIG_PACKAGE_fstools=y
CONFIG_PACKAGE_mtd=y
CONFIG_PACKAGE_kmod-mtd-rw=y
CONFIG_PACKAGE_kmod-mtd-core=y

# Zerotier / IPv6
CONFIG_PACKAGE_zerotier=y
CONFIG_PACKAGE_ipv6helper=y

# TTYD Web Shell
CONFIG_PACKAGE_ttyd=y

# Samba 文件共享
CONFIG_PACKAGE_samba4-server=y

# OpenClash 主程序
CONFIG_PACKAGE_luci-app-openclash=y

# Clash Tun 模式所需依赖
CONFIG_PACKAGE_ipset=y
CONFIG_PACKAGE_iptables=y
CONFIG_PACKAGE_kmod-tun=y
CONFIG_PACKAGE_luci-proto-wireguard=y
CONFIG_PACKAGE_coreutils=y
CONFIG_PACKAGE_coreutils-base64=y
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_ca-certificates=y
CONFIG_PACKAGE_dnsmasq-full=y
